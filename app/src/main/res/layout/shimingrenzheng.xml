<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="实名认证"
        android:gravity="center"
        android:textSize="35dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵         称：" />
        <EditText
            android:id="@+id/nickname"
            android:layout_width="200dp"
            android:layout_height="40dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份证号：" />
        <EditText
            android:id="@+id/idcard_number"
            android:layout_width="200dp"
            android:layout_height="40dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="真实姓名：" />
        <EditText
            android:id="@+id/real_name"
            android:layout_width="200dp"
            android:layout_height="40dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出生日期：" />
        <Button
            android:id="@+id/choose_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点我选择"
            />
        <EditText
            android:id="@+id/birthdate"
            android:layout_width="110dp"
            android:layout_height="40dp" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性        别：" />
        <RadioGroup
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
      <RadioButton
          android:id="@+id/women"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="女"/>
        <RadioButton
            android:id="@+id/men"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮         箱：" />
       <EditText
           android:id="@+id/email_address"
           android:layout_width="200dp"
           android:layout_height="40dp" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份证正面图：" />
        <Button
            android:id="@+id/buttonLocal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="相册上传" />

        <Button
            android:id="@+id/buttonCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拍照上传" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请上传如下图所示的身份证正面照"
        android:textColor="@color/red"/>
    <include
        layout="@layout/button3"
        android:visibility="gone"
        ></include>

    <ImageView
        android:id="@+id/idcard_pic"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:src="@drawable/idpic" />

<Button
    android:id="@+id/submit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="提交"
    />

</LinearLayout>